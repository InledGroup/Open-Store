---
import Layout from '../layouts/Layout.astro';
import { apps } from '../data/apps';
---

<Layout title="Inled Open Store - Descubre las mejores aplicaciones">
  <div class="hero">
    <div class="container">
      <h1 class="hero-title">Descubre Apps Incre√≠bles</h1>
      <p class="hero-subtitle">Las mejores aplicaciones para tu dispositivo, todas en un solo lugar</p>
    </div>
  </div>

  <section class="apps-section">
    <div class="container">
      <h2 class="section-title">Aplicaciones Destacadas</h2>

      <div class="apps-grid" id="apps-grid">
        {apps.map((app) => (
          <a href={`/app/${app.id}`} class="app-card">
            <div class="app-card-icon">
              <img src={app.icon} alt={`${app.title} icon`} class="app-icon" />
            </div>
            <div class="app-card-content">
              <h3 class="app-card-title">{app.title}</h3>
              <p class="app-card-description">{app.shortDescription}</p>
              <div class="app-card-platforms">
                {app.platform.slice(0, 3).map((platform) => (
                  <span class="platform-badge">{platform}</span>
                ))}
                {app.platform.length > 3 && (
                  <span class="platform-badge">+{app.platform.length - 3}</span>
                )}
              </div>
            </div>
            <div class="app-card-arrow">
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    background: linear-gradient(135deg, #3db6ff 0%, #2a9de6 100%);
    color: white;
    padding: 80px 0 100px;
    margin-bottom: -50px;
    position: relative;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50px;
    background: var(--bg-primary);
    border-radius: 50% 50% 0 0 / 100% 100% 0 0;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 16px;
    text-align: center;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    opacity: 0.95;
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .apps-section {
    padding: 60px 0;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 40px;
    color: var(--text-primary);
  }

  .apps-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 24px;
  }

  .app-card {
    background: var(--bg-secondary);
    border-radius: var(--radius-md);
    padding: 24px;
    display: flex;
    gap: 16px;
    align-items: flex-start;
    text-decoration: none;
    color: inherit;
    border: 1px solid var(--border);
    transition: var(--transition);
    position: relative;
    overflow: hidden;
  }

  .app-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 0;
    background: var(--primary);
    transition: var(--transition);
  }

  .app-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--primary);
  }

  .app-card:hover::before {
    height: 100%;
  }

  .app-card:hover .app-card-arrow {
    transform: translateX(5px);
    color: var(--primary);
  }

  .app-card:hover .app-card-icon {
    transform: scale(1.05);
  }

  .app-card-icon {
    flex-shrink: 0;
    transition: var(--transition);
  }

  .app-icon {
    width: 64px;
    height: 64px;
    border-radius: var(--radius-md);
    object-fit: cover;
    box-shadow: var(--shadow-sm);
  }

  .app-card-content {
    flex: 1;
    min-width: 0;
  }

  .app-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-primary);
  }

  .app-card-description {
    font-size: 0.95rem;
    color: var(--text-secondary);
    margin-bottom: 12px;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .app-card-platforms {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .platform-badge {
    display: inline-block;
    padding: 4px 10px;
    background: var(--bg-primary);
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-secondary);
  }

  .app-card-arrow {
    flex-shrink: 0;
    color: var(--text-secondary);
    transition: var(--transition);
    margin-top: 4px;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .apps-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  import { gsap } from 'gsap';

  // Animate app cards on page load
  document.addEventListener('DOMContentLoaded', () => {
    const cards = document.querySelectorAll('.app-card');

    gsap.from(cards, {
      opacity: 0,
      y: 20,
      duration: 0.4,
      stagger: 0.05,
      ease: 'power2.out',
      clearProps: 'all'
    });

    // Hero animation
    gsap.from('.hero-title', {
      opacity: 0,
      y: -30,
      duration: 0.6,
      ease: 'power3.out'
    });

    gsap.from('.hero-subtitle', {
      opacity: 0,
      y: -20,
      duration: 0.6,
      delay: 0.15,
      ease: 'power3.out'
    });
  });
</script>
